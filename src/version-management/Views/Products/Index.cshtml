@using DD.Cloud.VersionManagement.DataAccess.Models
@model IEnumerable<Product>

@{
	ViewBag.Title = "Products";
}

<table>
	<thead>
	<tr>
		<th>Id</th>
		<th>Name</th>
		<th>Links</th>
	</tr>
	</thead>
	<tbody>
	@foreach (Product product in Model)
	{
		<tr>
			<td>@product.Id</td>
			<td>@product.Name</td>
			<td>@Html.ActionLink("Releases", "ByProduct", "Releases", new { productId = product.Id })</td>
		</tr>
	}
	</tbody>
</table>
